<%=render :partial=>"search"%>
<div class="column contactlist">
  <div class="mainbox">
    
    <div class="displaying">
      <%= page_entries_info @users %>
      <div style="margin-top:-10px;float:right;">
        <%=link_to "Add New User", new_user_path%> | &nbsp;&nbsp;&nbsp;
        Export<%= link_to image_tag("Excel.png", :alt => "Export as xls", :title => "Export as xls",:remote=>true,:width => 20, :height => 25), request.parameters.merge({:xls => 'true'})%>
      </div>
    </div>

    <%=will_paginate @users%>

    <%if @users.blank?%>
      <h3>  No Results Found</h3>
    <%end%>

    <table class="standard_table" cellpadding="0" cellspacing="0">
      <tbody><tr class="list">
          <th>Firstname</th>
          <th>Username</th>
          <th>E-Mail</th>
          <th>Address</th>
          <th>Phone number</th>
          <th>Role</th>
          <th>Show</th>
          <th>Delete</th>
        </tr>


        <% @users.each_with_index do |user,i| %>
          <tr class="<%=cycle('', 'alt_row')%>">
            <td><%= user.firstname %></td>
            <td><%= link_to user.username,edit_user_path(user)  %></td>
            <td><%= user.email %></td>
            <td><%= user.address %></td>
            <td><%= user.phone_number %></td>
            <td><%= user.role %></td>
            <td><%= link_to 'Show', user %></td>
            <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
        <% end %>

      </tbody>
    </table>
    <%=will_paginate @users%>
    <div class="clear"></div>

  </div>

</div>